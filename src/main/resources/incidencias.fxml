<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.IncidenciaController" style="-fx-background-color: #f4f4f4;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <Label text="GESTIÓN DE INCIDENCIAS" style="-fx-font-weight: bold; -fx-font-size: 18px;" />

        <VBox spacing="5">
            <Label text="Título:" />
            <TextField fx:id="txtTitulo" promptText="Ej: Error en el login" />
        </VBox>

        <VBox spacing="5">
            <Label text="Descripción:" />
            <TextArea fx:id="txtDescripcion" prefHeight="100" promptText="Describe el problema aquí..." />
        </VBox>

        <Button text="Guardar Incidencia" onAction="#onGuardar"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand;" maxWidth="Infinity" />
    </children>
</VBox>