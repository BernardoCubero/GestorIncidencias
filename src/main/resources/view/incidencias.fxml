<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="mainPane" prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: #f4f4f9;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.IncidenciaController">
    <top>
        <MenuBar style="-fx-background-color: #2c3e50;">
            <menus>
                <Menu text="Menu" style="-fx-text-fill: white;">
                    <items>
                        <MenuItem text="Crear Incidencia" onAction="#mostrarFormularioCrear"/>
                        <MenuItem text="Buscar Incidencia" onAction="#mostrarBuscar"/>
                        <MenuItem text="Ver Estadísticas" onAction="#mostrarEstado"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="30.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Button onAction="#mostrarFormularioCrear" text="CREAR&#10;INCIDENCIA" textAlignment="CENTER"
                    prefHeight="180.0" prefWidth="200.0"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" />

            <Button onAction="#mostrarBuscar" text="BUSCAR&#10;INCIDENCIA" textAlignment="CENTER"
                    prefHeight="180.0" prefWidth="200.0"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" />

            <Button onAction="#mostrarEstado" text="ESTADO&#10;SISTEMA" textAlignment="CENTER"
                    prefHeight="180.0" prefWidth="200.0"
                    style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" />
        </HBox>
    </center>
    <bottom>
        <Label text="Sistema Híbrido: MySQL + MongoDB Activos" style="-fx-padding: 10; -fx-text-fill: #95a5a6;" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>